doctype html
html(lang="en")
  head
    include includes/head.pug
  body 
    .login-page 
      .container.container-up 
        .row 
          .col-lg-6.col-md-12.col-sm-12
          .col-lg-6.col-md-12.col-sm-12
            a(href="index.html")
              .image-main-logo
                img.w-100(src="./assets/images/Logo.png", alt="Logo" )
            h1.mb-1.text-center.fw-bold Forget Password
            p.text-center.mb-5 Already have account? 
              a(href="login.html") Sign In
            form.form-content.px-5(action="")   
              
              .input-group.mb-3
                span.input-group-text 
                  i.fa-regular.fa-envelope
                .form-floating
                  input#floatingInput.form-control(type='email' placeholder='name@example.com')
                  label(for='floatingInput') Email 

              
                
              button.btn.btn-dark.w-100.d-block(type='submit') Send Email
    

    include includes/script.pug 

